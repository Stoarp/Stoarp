<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Stoarp.App"
             xmlns:local="using:Stoarp"
             RequestedThemeVariant="Dark">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <SimpleTheme />
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://Stoarp/Theme/StoarpTheme.axaml" />
                <ResourceInclude Source="avares://Stoarp/Theme/Controls.axaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Override SimpleTheme accent colors -->
            <SolidColorBrush x:Key="ThemeAccentBrush" Color="#3A3A3A" />
            <SolidColorBrush x:Key="ThemeAccentBrush2" Color="#4A4A4A" />
            <SolidColorBrush x:Key="ThemeAccentBrush3" Color="#2E2E2E" />
            <SolidColorBrush x:Key="ThemeAccentBrush4" Color="#5A5A5A" />
            <SolidColorBrush x:Key="ThemeBorderMidBrush" Color="#333333" />
            <SolidColorBrush x:Key="ThemeControlHighBrush" Color="#4A4A4A" />
            <SolidColorBrush x:Key="ThemeControlMidBrush" Color="#3A3A3A" />
            <SolidColorBrush x:Key="ThemeForegroundBrush" Color="#E0E0E0" />
            <SolidColorBrush x:Key="ThemeBackgroundBrush" Color="#121212" />
            <SolidColorBrush x:Key="ThemeControlHighlightMidBrush" Color="#4A4A4A" />
            <SolidColorBrush x:Key="HighlightBrush" Color="#3A3A3A" />
            <SolidColorBrush x:Key="HighlightForegroundBrush" Color="#E0E0E0" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
